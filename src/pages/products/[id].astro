---
import Layout from '../../_shared/layouts/app.layout.astro';
import { getData } from '../../services/api.js';

const { id } = Astro.params;
const product = await getData(`products/${id}`);

const title = product ? product.name : "Product Not Found";
---

<Layout title={title}>
  <main class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">{title}</h1>
    {product ? (
      <div class="bg-white shadow-md rounded-lg p-6">
        <p class="text-xl mb-2"><strong>Description:</strong> {product.description}</p>
        <p class="text-lg mb-2"><strong>Price:</strong> ${product.price.toFixed(2)}</p>
        <p class="text-lg mb-4"><strong>Category:</strong> {product.category}</p>
        <a href={`/products/${id}/edit`} class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600">
          Edit Product
        </a>
      </div>
    ) : (
      <p class="text-red-500">Product not found.</p>
    )}
  </main>
</Layout>