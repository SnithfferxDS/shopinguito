---
import Mainlayout from "./main.layout.astro";
import Sidebar from "../templates/sidebar.astro";
import Navbar from "../templates/app.navbar.astro";
import Footer from "../templates/footer.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<Mainlayout title={title}>
  <Navbar />
	<div class="flex">
		<Sidebar />
		<main class="container mx-auto p-4">
			<slot />
			<Footer />
		</main>
	</div>
</Mainlayout>
